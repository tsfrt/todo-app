generator client {
  provider      = "prisma-client-js"
  output        = "../app/generated/prisma"
  binaryTargets = ["debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://todo_app:abc123456789@instance-74523af4-dc13-49ac-8be9-40d2201aadac.database.cloud.databricks.com:5432/todo_app?sslmode=require"
}

model Todo {
  id        String   @id @default(uuid())
  title     String
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
